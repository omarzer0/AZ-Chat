<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoneLoginMVVM" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/secondaryColor</item>
        <!-- Customize your theme here. -->
        <item name="textAllCaps">false</item>
        <item name="android:overScrollMode">never</item>

    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="android:navigationBarColor">@color/mainColor</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="roundInputTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_12sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_12sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_12sdp</item>
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="boxCornerRadiusTopStart">@dimen/_12sdp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="headerTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textMainColor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="theme">@style/singleLine</item>
    </style>

    <style name="headerTextStyleSmall" parent="headerTextStyle">
        <item name="android:textColor">@color/textMainColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="theme">@style/singleLine</item>
    </style>

    <style name="bodyTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="theme">@style/singleLine</item>
    </style>

    <style name="verySmallTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="singleLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Cornered">
        <item name="cornerSize">20%</item>
    </style>

    <style name="roundShapeableImage">
        <item name="shapeAppearanceOverlay">@style/Circular</item>
    </style>

    <style name="corneredShapeableImage">
        <item name="shapeAppearanceOverlay">@style/Cornered</item>
    </style>

    <style name="imageButtonEffect" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>